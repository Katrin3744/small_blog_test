<div class="container">
  <h3>Create new post</h3>
  <div>
    <%= form_with model: @post, url: posts_url, method: :post, data: { turbo: false } do |f| %>
      <div class="row">
        <div class="form-group row col-md-8 mt-2 mb-2">
          <div class="col-md-1">
            <%= f.label :title, "Title" %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row col-md-8 mt-2 mb-2">
          <div class="col-md-1">
            <%= f.label :body, "Body" %>
          </div>
          <div class="col-md-6">
            <%= f.text_area :body, autofocus: true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group row col-md-8 mt-2 mb-2">
          <div class="col-md-4">
            <%= link_to 'Cancel', root_path, class: "btn btn-secondary" %>
          </div>
          <div class="col-md-7">
              <%= f.submit "Create", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
