<div class="container">
  <div class="row">
    <div class="form-group row col-md-8 mt-2 mb-2">
      <div class="col-md-1">
        Title
      </div>
      <div class="col-md-6">
        <%= @post.title %>
      </div>
    </div>

    <div class="form-group row col-md-8 mt-2 mb-2">
      <div class="col-md-1">
        Body
      </div>
      <div class="col-md-6">
        <%= @post.body %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group row col-md-8 mt-2 mb-2">
      <div class="col-md-4">
        <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
      </div>
      <% if policy(@post).destroy? %>
        <div class="col-md-7">
          <%= link_to 'Delete', post_path(@post), method: :delete, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
