<div class="container">
  <div class="col-md-12">
    <div class="d-flex flex-row-reverse">
      <%= link_to "Create new post", new_post_path, class: "btn btn-primary" %>
    </div>

  </div>
  <div>
    <div>
      <div><h3>All posts</h3></div>
    </div>

    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>
            Author
          </th>
          <th>
            Title
          </th>
          <th>

          </th>
        </tr>
        </thead>
        <tbody>
        <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>

